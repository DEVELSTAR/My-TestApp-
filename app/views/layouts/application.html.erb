  <body>
      <header>
        <%= render "shared/navbar" %>
      </header>
      <main>
        <%= render "shared/flash" %>
        <%= yield %>
      </main>
      <footer>
        <%= render "shared/footer" %>
      </footer>
  </body>
</html>
